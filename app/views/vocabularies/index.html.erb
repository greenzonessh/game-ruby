<div class="row">
  <div class="col-md-12">
    <div id="notice" class="alert alert-dark">
      <%= notice %> <br>
    </div>
  </div>
  <div class="col-md-12">
    <div class="row">
      <h1>Vocabularies</h1>
    </div>
    <table class="table table-stripped">
      <thead>
      <tr>
        <th>Word</th>
        <th>created_at</th>
        <th>updated_at</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @vocabularies.each do |vocabulary| %>
        <tr>
          <td><%= vocabulary.word %></td>
          <td><%= vocabulary.created_at %></td>
          <td><%= vocabulary.updated_at %></td>
          <td><%= link_to 'Edit', edit_vocabulary_path(vocabulary) , class: "btn btn-warning btn-sm"%></td>
          <td><%= link_to 'Destroy', vocabulary, class: "btn btn-danger btn-sm",method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Vocabulary', new_vocabulary_path, class: "btn btn-primary" %>
</div>